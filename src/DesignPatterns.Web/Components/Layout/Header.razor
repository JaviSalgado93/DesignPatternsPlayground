<header class="sticky top-0 z-40 w-full bg-white/95 backdrop-blur-md border-b border-secondary-200 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 md:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <!-- Logo + Brand -->
            <div class="flex items-center gap-3">
                <!-- Hamburger Menu for Mobile -->
                <button @onclick="OnMenuToggle" 
                        class="lg:hidden p-2 hover:bg-secondary-100 rounded-lg transition-colors">
                    <svg class="w-6 h-6 text-secondary-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>

                <!-- Logo SVG -->
                <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
                    <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <!-- Logo: Abstract blocks representing design patterns -->
                        <rect x="2" y="2" width="8" height="8" fill="url(#grad1)" rx="1" />
                        <rect x="12" y="2" width="8" height="8" fill="url(#grad2)" rx="1" />
                        <rect x="7" y="12" width="8" height="8" fill="url(#grad3)" rx="1" />
                        <defs>
                            <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" style="stop-color:#2563eb;stop-opacity:1" />
                                <stop offset="100%" style="stop-color:#0ea5e9;stop-opacity:1" />
                            </linearGradient>
                            <linearGradient id="grad2" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" style="stop-color:#10b981;stop-opacity:1" />
                                <stop offset="100%" style="stop-color:#34d399;stop-opacity:1" />
                            </linearGradient>
                            <linearGradient id="grad3" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" style="stop-color:#8b5cf6;stop-opacity:1" />
                                <stop offset="100%" style="stop-color:#a78bfa;stop-opacity:1" />
                            </linearGradient>
                        </defs>
                    </svg>
                    <span class="hidden sm:inline font-bold text-lg bg-gradient-to-r from-primary-600 to-accent-purple bg-clip-text text-transparent">
                        Design Patterns
                    </span>
                </a>
            </div>

            <!-- Center Navigation (Desktop Only) -->
            <nav class="hidden lg:flex items-center gap-8">
                <a href="/" class="text-sm font-medium text-secondary-700 hover:text-primary-600 transition-colors">
                    Inicio
                </a>
                <a href="/creational" class="text-sm font-medium text-secondary-700 hover:text-primary-600 transition-colors">
                    Patrones
                </a>
                <a href="/about" class="text-sm font-medium text-secondary-700 hover:text-primary-600 transition-colors">
                    Acerca de
                </a>
            </nav>

            <!-- Right Actions -->
            <div class="flex items-center gap-2">
                <a href="https://github.com/JaviSalgado93/DesignPatternsPlayground" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="p-2 hover:bg-secondary-100 rounded-lg transition-colors text-secondary-600 hover:text-secondary-900">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.868-.013-1.703-2.782.603-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.89 1.529 2.341 1.544 2.914 1.19.092-.926.35-1.557.636-1.914-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
</header>

@code {
    [Parameter] 
    public EventCallback OnMenuToggleCallback { get; set; }

    private async Task OnMenuToggle()
    {
        await OnMenuToggleCallback.InvokeAsync();
    }
}
