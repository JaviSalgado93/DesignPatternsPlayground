<div class="bg-secondary-900 rounded-xl overflow-hidden shadow-lg mb-6 border border-secondary-700">
    @if (!string.IsNullOrEmpty(Title))
    {
        <div class="bg-secondary-800 px-4 py-3 flex items-center justify-between border-b border-secondary-700">
            <div class="flex items-center gap-2">
                <span class="text-secondary-300 font-mono text-sm font-medium">@Title</span>
            </div>
            @if (!string.IsNullOrEmpty(Language))
            {
                <span class="px-3 py-1 bg-secondary-700 text-secondary-300 rounded-full text-xs font-medium uppercase">
                    @Language
                </span>
            }
        </div>
    }
    
    <div class="relative">
        <pre class="p-6 overflow-x-auto"><code class="text-gray-100 font-mono text-sm leading-relaxed">@Code</code></pre>
        
        @if (ShowCopyButton)
        {
            <button @onclick="CopyToClipboard" 
                    class="absolute top-4 right-4 px-3 py-1 bg-secondary-700 hover:bg-secondary-600 text-white text-sm rounded-md transition-colors">
                📋 Copiar
            </button>
        }
    </div>
</div>

@code {
    [Parameter] public string Code { get; set; } = "";
    [Parameter] public string Language { get; set; } = "csharp";
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public bool ShowLineNumbers { get; set; } = false;
    [Parameter] public bool ShowCopyButton { get; set; } = true;

