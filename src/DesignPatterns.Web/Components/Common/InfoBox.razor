<div class="@GetBoxClasses() rounded-xl p-5 mb-6 border-l-4 @GetBorderColor() shadow-sm">
    <div class="flex items-start gap-4">
        <div class="flex-shrink-0 text-3xl">
            @GetIcon()
        </div>
        <div class="flex-1">
            @if (!string.IsNullOrEmpty(Title))
            {
                <h4 class="text-lg font-bold mb-2 @GetTextColor()">@Title</h4>
            }
            <div class="@GetTextColor() leading-relaxed">
                @if (!string.IsNullOrEmpty(Message))
                {
                    <p>@Message</p>
                }
                @ChildContent
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Type { get; set; } = "info"; // info, success, warning, danger, tip
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Message { get; set; } = "";
    [Parameter] public RenderFragment?  ChildContent { get; set; }

    private string GetBoxClasses()
    {
        return Type switch
        {
            "success" => "bg-green-50 border-green-500",
            "warning" => "bg-yellow-50 border-yellow-500",
            "danger" => "bg-red-50 border-red-500",
            "tip" => "bg-purple-50 border-purple-500",
            _ => "bg-blue-50 border-primary-600"
        };
    }

    private string GetTextColor()
    {
        return Type switch
        {
            "success" => "text-green-800",
            "warning" => "text-yellow-800",
            "danger" => "text-red-800",
            "tip" => "text-purple-800",
            _ => "text-blue-800"
        };
    }

    private string GetBorderColor()
    {
        return Type switch
        {
            "success" => "border-green-500",
            "warning" => "border-yellow-500",
            "danger" => "border-red-500",
            "tip" => "border-purple-500",
            _ => "border-primary-500"
        };
    }

    private string GetIcon()
    {
        return Type switch
        {
            "success" => "✅",
            "warning" => "⚠️",
            "danger" => "❌",
            "tip" => "💡",
            _ => "ℹ️"
        };
    }
}