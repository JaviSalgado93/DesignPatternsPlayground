@code {
    private List<BreadcrumbItem> breadcrumbItems = new()
    {
        new BreadcrumbItem("Home", ""),
        new BreadcrumbItem("Structural", "structural"),
        new BreadcrumbItem("Composite", "structural/composite")
    };

    private int activeTab = 0;
    private List<string> tabTitles = new() { "Básico", "Avanzado", "Uso" };

    private List<string> useCases = new()
    {
        "Sistemas de archivos y directorios",
        "Estructuras de menús jerárquicos",
        "Jerarquías organizacionales",
        "Componentes UI y formularios",
        "Árboles de categorías",
        "Sistemas de permisos",
        "Estructuras de comentarios anidados",
        "DOM de HTML/XML"
    };

    private List<string> tags = new() { "Árbol", "Jerarquía", "Parte-Todo", "Recursión" };

    private string basicCode = @"
    // ===== Interfaz común =====
    public interface IMenuItem
    {
        string Name { get; }
        void Display(int indent = 0);
        void Execute();
    }

    // ===== Hoja - Acción =====
    public class MenuAction : IMenuItem
    {
        public string Name { get; set; }
        private Action _action;

        public MenuAction(string name, Action action)
        {
            Name = name;
            _action = action;
        }

        public void Display(int indent = 0)
        {
            Console.WriteLine(new string(' ', indent) + $""→ {Name}"");
        }

        public void Execute()
        {
            _action?.Invoke();
        }
    }

    // ===== Composite - Menú =====
    public class Menu : IMenuItem
    {
        public string Name { get; set; }
        private List<IMenuItem> _items = new();

        public Menu(string name) => Name = name;

        public void Add(IMenuItem item) => _items.Add(item);

        public void Display(int indent = 0)
        {
            Console.WriteLine(new string(' ', indent) + $""📋 {Name}"");
            foreach (var item in _items)
                item.Display(indent + 2);
        }

        public void Execute() => Display();
    }

    // ===== Uso =====
    var mainMenu = new Menu(""MENÚ"");
    var fileMenu = new Menu(""Archivo"");
    fileMenu.Add(new MenuAction(""Nuevo"", () => Console.WriteLine(""Nuevo"")));
    fileMenu.Add(new MenuAction(""Abrir"", () => Console.WriteLine(""Abrir"")));
    mainMenu.Add(fileMenu);
    mainMenu.Display();";

    private string advancedCode = @"
    // ===== Interfaz común =====
    public interface IEmployee
    {
        string Name { get; }
        string Position { get; }
        decimal Salary { get; }
        void Display(int indent = 0);
        decimal GetTotalSalary();
        int GetEmployeeCount();
    }

    // ===== Hoja - Empleado =====
    public class Employee : IEmployee
    {
        public string Name { get; set; }
        public string Position { get; set; }
        public decimal Salary { get; set; }

        public Employee(string name, string pos, decimal salary)
        {
            Name = name;
            Position = pos;
            Salary = salary;
        }

        public void Display(int indent = 0)
        {
            Console.WriteLine(new string(' ', indent) + 
                $""👤 {Name} ({Position}) - ${Salary}"");
        }

        public decimal GetTotalSalary() => Salary;
        public int GetEmployeeCount() => 1;
    }

    // ===== Composite - Departamento =====
    public class Department : IEmployee
    {
        public string Name { get; set; }
        public string Position => ""Departamento"";
        public decimal Salary => 0;
        private List<IEmployee> _members = new();

        public Department(string name) => Name = name;
        public void Add(IEmployee emp) => _members.Add(emp);

        public void Display(int indent = 0)
        {
            Console.WriteLine(new string(' ', indent) + $""🏢 {Name}"");
            foreach (var m in _members)
                m.Display(indent + 2);
        }

        public decimal GetTotalSalary() => _members.Sum(m => m.GetTotalSalary());
        public int GetEmployeeCount() => _members.Sum(m => m.GetEmployeeCount());
    }

    // ===== Uso =====
    var ceo = new Department(""CEO"");
    var itDept = new Department(""IT"");
    itDept.Add(new Employee(""Juan"", ""Dev"", 3000));
    itDept.Add(new Employee(""María"", ""Arch"", 4000));
    ceo.Add(itDept);

    ceo.Display();
    Console.WriteLine($""Total: {ceo.GetTotalSalary()}"");";

    private string usageCode = @"
    // ===== Estructura jerárquica =====
    var root = new Menu(""SISTEMA"");

    // Nivel 1
    var archivo = new Menu(""Archivo"");
    archivo.Add(new MenuAction(""Nuevo"", () => { }));
    archivo.Add(new MenuAction(""Abrir"", () => { }));

    var editar = new Menu(""Editar"");
    editar.Add(new MenuAction(""Cortar"", () => { }));
    editar.Add(new MenuAction(""Copiar"", () => { }));

    var ver = new Menu(""Ver"");
    var zoom = new Menu(""Zoom"");
    zoom.Add(new MenuAction(""In"", () => { }));
    zoom.Add(new MenuAction(""Out"", () => { }));
    ver.Add(zoom);

    // Construir jerarquía
    root.Add(archivo);
    root.Add(editar);
    root.Add(ver);
    root.Add(new MenuAction(""Salir"", () => { }));

    // ===== Mostrar toda la estructura =====
    root.Display();

    // ✅ Mismo código para hojas y composites
    // ✅ Recursión automática
    // ✅ Cliente no necesita saber la profundidad";
