    private string advancedCode = @"
    // ===== Interfaz común =====
    public interface IDatabase
    {
        void Execute(string query);
        string FetchData(string query);
    }

    // ===== Proxy con control, caché y auditoría =====
    public class DatabaseProxy : IDatabase
    {
        private RealDatabase _db;
        private Dictionary<string, string> _cache;
        private string _currentUser;
        private List<string> _auditLog;

        public DatabaseProxy(string conn, string user)
        {
            _db = new RealDatabase(conn);
            _currentUser = user;
            _cache = new();
            _auditLog = new();
        }

        public void Execute(string query)
        {
            // Control de acceso
            if (!HasPermission(_currentUser, ""execute""))
            {
                Console.WriteLine(""Acceso denegado"");
                LogAudit($""Intento: {query}"");
                return;
            }

            LogAudit($""Execute: {query}"");
            _db.Execute(query);
        }

        public string FetchData(string query)
        {
            // Control de acceso
            if (!HasPermission(_currentUser, ""read""))
            {
                LogAudit($""Intento de lectura: {query}"");
                return """";
            }

            // Caché
            if (_cache.ContainsKey(query))
            {
                Console.WriteLine(""📊 Desde caché"");
                return _cache[query];
            }

            // Auditoría
            LogAudit($""FetchData: {query}"");

            // Ejecutar
            var result = _db.FetchData(query);

            // Guardar caché
            _cache[query] = result;

            return result;
        }

        private void LogAudit(string msg)
        {
            _auditLog.Add($""[{DateTime.Now}] {_currentUser}: {msg}"");
        }
    }";

    private string typesCode = @"
    // ===== TIPOS DE PROXY =====

    // 1️⃣ LAZY PROXY - Carga diferida
    public class LazyProxy : IImage
    {
        private RealImage _real;

        public void Display()
        {
            if (_real == null)
                _real = new RealImage(""photo.jpg"");
            _real.Display();
        }
    }

    // 2️⃣ PROTECTION PROXY - Control de acceso
    public class ProtectionProxy : IImage
    {
        private RealImage _real;
        private bool _canAccess;

        public void Display()
        {
            if (!_canAccess)
            {
                Console.WriteLine(""❌ Acceso denegado"");
                return;
            }
            _real.Display();
        }
    }

    // 3️⃣ CACHING PROXY - Almacenamiento en caché
    public class CachingProxy : IDatabase
    {
        private Dictionary<string, string> _cache = new();

        public string FetchData(string query)
        {
            if (_cache.ContainsKey(query))
                return _cache[query];

            var result = _db.FetchData(query);
            _cache[query] = result;
            return result;
        }
    }

    // 4️⃣ LOGGING PROXY - Auditoría
    public class LoggingProxy : IDatabase
    {
        private List<string> _logs = new();

        public void Execute(string query)
        {
            _logs.Add($""Execute: {query}"");
            _db.Execute(query);
        }
    }

    // 5️⃣ REMOTE PROXY - Objeto remoto
    public class RemoteProxy : IService
    {
        private HttpClient _client;

        public string GetData()
        {
            var response = _client.GetAsync(""http://api.example.com/data"");
            return response.Content;
        }
    }";
