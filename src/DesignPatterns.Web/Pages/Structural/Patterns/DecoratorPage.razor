        "Componentes UI con estilos dinámicos",
        "Pizza con toppings adicionales",
        "Órdenes con extras opcionales",
        "Notificadores con múltiples canales",
        "Procesamiento de imágenes con filtros"
    };

    private List<string> tags = new() { "Composición", "Dinamismo", "Herencia Flexible", "Responsabilidad" };

    private string basicCode = @"
    // ===== Interfaz común =====
    public interface ICoffee
    {
        double GetCost();
        string GetDescription();
    }

    // ===== Componente base =====
    public class SimpleCoffee : ICoffee
    {
        public double GetCost() => 5.0;
        public string GetDescription() => ""Café simple"";
    }

    // ===== Decorador base =====
    public abstract class CoffeeDecorator : ICoffee
    {
        protected ICoffee _coffee;

        public CoffeeDecorator(ICoffee coffee) => _coffee = coffee;

        public virtual double GetCost() => _coffee.GetCost();
        public virtual string GetDescription() => _coffee.GetDescription();
    }

    // ===== Decoradores específicos =====
    public class MilkDecorator : CoffeeDecorator
    {
        public MilkDecorator(ICoffee coffee) : base(coffee) { }

        public override double GetCost() => base.GetCost() + 0.5;
        public override string GetDescription() 
            => base.GetDescription() + "", leche"";
    }

    public class VanillaDecorator : CoffeeDecorator
    {
        public VanillaDecorator(ICoffee coffee) : base(coffee) { }

        public override double GetCost() => base.GetCost() + 0.75;
        public override string GetDescription() 
            => base.GetDescription() + "", vainilla"";
    }

    // ===== Uso =====
    ICoffee coffee = new SimpleCoffee();
    coffee = new MilkDecorator(coffee);
    coffee = new VanillaDecorator(coffee);

    Console.WriteLine($""{coffee.GetDescription()} = ${coffee.GetCost()}"");";

    private string advancedCode = @"
    // ===== Interfaz común =====
    public interface IDataStream
    {
        void Write(string data);
        string Read();
        void Close();
    }

    // ===== Componente base =====
    public class FileDataStream : IDataStream
    {
        private string _data = """";

        public void Write(string data) => _data += data;
        public string Read() => _data;
        public void Close() => Console.WriteLine(""Cerrado"");
    }

    // ===== Decorador base =====
    public abstract class DataStreamDecorator : IDataStream
    {
        protected IDataStream _stream;

        public DataStreamDecorator(IDataStream stream) => _stream = stream;

        public virtual void Write(string data) => _stream.Write(data);
        public virtual string Read() => _stream.Read();
        public virtual void Close() => _stream.Close();
    }

    // ===== Decoradores =====
    public class CompressionDecorator : DataStreamDecorator
    {
        public CompressionDecorator(IDataStream stream) : base(stream) { }

        public override void Write(string data)
        {
            var compressed = Compress(data);
            base.Write(compressed);
        }

        private string Compress(string data) 
            => Convert.ToBase64String(Encoding.UTF8.GetBytes(data));
    }

    public class EncryptionDecorator : DataStreamDecorator
    {
        public EncryptionDecorator(IDataStream stream) : base(stream) { }

        public override void Write(string data)
        {
            var encrypted = Encrypt(data);
            base.Write(encrypted);
        }

        private string Encrypt(string data) 
            => string.Join("""", data.Select(c => (char)(c + 1)));
    }";

    private string usageCode = @"
    // ===== Composición básica =====
    ICoffee coffee1 = new SimpleCoffee();
    // Costo: $5.00, Descripción: Café simple

    // ===== Agregar un decorador =====
    ICoffee coffee2 = new MilkDecorator(new SimpleCoffee());
    // Costo: $5.50, Descripción: Café simple, leche

    // ===== Agregar múltiples decoradores =====
    ICoffee coffee3 = new VanillaDecorator(
        new MilkDecorator(
            new SimpleCoffee()
        )
    );
    // Costo: $6.25, Descripción: Café simple, leche, vainilla

    // ===== Composición dinámica =====
    ICoffee coffee = new SimpleCoffee();

    if (userWantsMilk)
        coffee = new MilkDecorator(coffee);

    if (userWantsVanilla)
        coffee = new VanillaDecorator(coffee);

    if (userWantsCaramel)
        coffee = new CaramelDecorator(coffee);

    Console.WriteLine(coffee.GetDescription());
    Console.WriteLine($""${coffee.GetCost()}"");

    // ✅ Flexible combinación
    // ✅ Sin crear nuevas subclases
    // ✅ Responsabilidades separadas";
}