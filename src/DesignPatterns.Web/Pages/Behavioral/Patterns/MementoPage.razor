@code {
    private List<BreadcrumbItem> breadcrumbItems = new()
    {
        new BreadcrumbItem("Home", "/"),
        new BreadcrumbItem("Behavioral", "/behavioral"),
        new BreadcrumbItem("Memento", "/behavioral/memento")
    };

    private int activeTab = 0;
    private List<string> tabTitles = new() { "Básico", "Avanzado", "Patrones" };

    private List<string> useCases = new()
    {
        "Undo/redo en editores",
        "Transacciones reversibles",
        "Snapshots de configuración",
        "Versionado de documentos",
        "Carritos de compras",
        "Estados de juegos",
        "Backup de datos",
        "Historial de cambios"
    };

    private List<string> tags = new() { "Snapshots", "Historial", "Encapsulación", "Estado" };

    private string basicCode = @"
    // ===== Memento =====
    public class EditorMemento
    {
        public string Content { get; }
        public DateTime SavedAt { get; }

        public EditorMemento(string content)
        {
            Content = content;
            SavedAt = DateTime.Now;
        }
    }

    // ===== Originator =====
    public class TextEditor
    {
        private string _content = """";

        public void Write(string text) => _content += text;

        public EditorMemento CreateSnapshot()
            => new EditorMemento(_content);

        public void RestoreSnapshot(EditorMemento m)
            => _content = m.Content;

        public void ShowContent()
            => Console.WriteLine($""'{_content}'"");
    }

    // ===== Caretaker =====
    public class EditorHistory
    {
        private List<EditorMemento> _snapshots = new();

        public void Save(EditorMemento m) 
            => _snapshots.Add(m);

        public EditorMemento Get(int index) 
            => _snapshots[index];
    }

    // ===== Uso =====
    var editor = new TextEditor();
    var history = new EditorHistory();

    editor.Write(""Hola"");
    history.Save(editor.CreateSnapshot());

    editor.Write("" Mundo"");
    history.Save(editor.CreateSnapshot());

    editor.RestoreSnapshot(history.Get(0));
    editor.ShowContent(); // Hola";

    private string advancedCode = @"
    // ===== Advanced Memento =====
    public class DocumentMemento
    {
        public string Title { get; }
        public string Content { get; }
        public int Version { get; }
        public DateTime CreatedAt { get; }

        public DocumentMemento(
            string title, 
            string content, 
            int version)
        {
            Title = title;
            Content = content;
            Version = version;
            CreatedAt = DateTime.Now;
        }
    }

    // ===== Originator =====
    public class Document
    {
        public string Title { get; set; }
        public string Content { get; set; }
        public int Version { get; set; }

        public void Edit(string newContent)
        {
            Content = newContent;
            Version++;
        }

        public DocumentMemento CreateVersion()
            => new DocumentMemento(Title, Content, Version);

        public void RestoreVersion(DocumentMemento m)
        {
            Title = m.Title;
            Content = m.Content;
            Version = m.Version;
        }
    }

    // ===== Caretaker =====
    public class DocumentHistory
    {
        private Dictionary<int, DocumentMemento> _versions = new();

        public void SaveVersion(DocumentMemento m, int num)
            => _versions[num] = m;

        public DocumentMemento GetVersion(int num)
            => _versions[num];
    }";

    private string usageCode = @"
    // ===== PATRÓN 1: Undo/Redo con Stack =====
    var undoStack = new Stack<EditorMemento>();
    var redoStack = new Stack<EditorMemento>();

    editor.Write(""Texto"");
    undoStack.Push(editor.CreateSnapshot());

    // Deshacer
    var m = undoStack.Pop();
    editor.RestoreSnapshot(m);
    redoStack.Push(m);

    // Rehacer
    m = redoStack.Pop();
    editor.RestoreSnapshot(m);
    undoStack.Push(m);

    // ===== PATRÓN 2: Snapshots Timestamped =====
    public class TimestampedMemento
    {
        public string State { get; }
        public DateTime SavedAt { get; }
    
        public TimestampedMemento(string state)
        {
            State = state;
            SavedAt = DateTime.Now;
        }
    }

    // ===== PATRÓN 3: Versioning =====
    public class VersionedCaretaker
    {
        private Dictionary<int, EditorMemento> _versions;
        private int _currentVersion = 0;

        public void SaveVersion(EditorMemento m)
        {
            _versions[++_currentVersion] = m;
        }

        public EditorMemento GetVersion(int version)
            => _versions[version];
    }";
}