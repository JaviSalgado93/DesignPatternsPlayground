    // ===== Document States =====
    public interface IDocumentState
    {
        void Edit(Document doc, string content);
        void Save(Document doc);
        void Close(Document doc);
        string GetStateName();
    }

    // ===== ReadOnly State =====
    public class ReadOnlyState : IDocumentState
    {
        public void Edit(Document doc, string content)
        {
            doc.SetState(new EditingState());
            doc.Edit(content);
        }

        public void Save(Document doc)
            => Console.WriteLine(""No se puede guardar"");

        public void Close(Document doc)
            => Console.WriteLine(""Cerrando"");

        public string GetStateName() => ""ReadOnly"";
    }

    // ===== Editing State =====
    public class EditingState : IDocumentState
    {
        public void Edit(Document doc, string content)
            => doc.SetContent(content);

        public void Save(Document doc)
        {
            doc.SaveContent();
            doc.SetState(new ReadOnlyState());
        }

        public void Close(Document doc)
        {
            if (doc.IsModified)
                Save(doc);
        }

        public string GetStateName() => ""Editing"";
    }

    // ===== Context =====
    public class Document
    {
        private IDocumentState _state;
        private string _content;
        public bool IsModified { get; set; }

        public Document()
        {
            _state = new ReadOnlyState();
        }

        public void SetState(IDocumentState s) 
            => _state = s;

        public void Edit(string c) 
            => _state.Edit(this, c);

        public void Save() => _state.Save(this);
    }";

    private string comparisonCode = @"
    // ===== SIN STATE (Con if/switch) =====
    public class DocumentWithoutState
    {
        private string _state = ""readonly"";
        private string _content = """";

        public void Edit(string content)
        {
            if (_state == ""readonly"")
                _state = ""editing"";
            else if (_state == ""editing"")
                _content = content;
            else if (_state == ""closed"")
                Console.WriteLine(""No se puede editar"");
        }

        public void Save()
        {
            if (_state == ""readonly"")
                Console.WriteLine(""No se puede guardar"");
            else if (_state == ""editing"")
            {
                // guardar...
                _state = ""readonly"";
            }
        }
    }
    // ❌ Lógica complicada, difícil de mantener

    // ===== CON STATE (Patrón) =====
