@code {
    private List<BreadcrumbItem> breadcrumbItems = new()
    {
        new BreadcrumbItem("Home", "/"),
        new BreadcrumbItem("Behavioral", "/behavioral"),
        new BreadcrumbItem("Command", "/behavioral/command")
    };

    private int activeTab = 0;
    private List<string> tabTitles = new() { "Básico", "Avanzado", "Patrones" };

    private List<string> useCases = new()
    {
        "Undo/redo en editores",
        "Transacciones de base de datos",
        "Colas de tareas",
        "Macros y scripts",
        "Control remoto",
        "Historial de cambios",
        "Sistemas de auditoría",
        "Procesamiento asíncrono"
    };

    private List<string> tags = new() { "Encapsulación", "Undo/Redo", "Historial", "Desacoplamiento" };

    private string basicCode = @"
    // ===== Command Interface =====
    public interface ICommand
    {
        void Execute();
        void Undo();
    }

    // ===== Receiver =====
    public class Calculator
    {
        private int _value = 0;

        public void Add(int amount) => _value += amount;
        public void Subtract(int amount) => _value -= amount;
        public int GetValue() => _value;
    }

    // ===== Concrete Commands =====
    public class AddCommand : ICommand
    {
        private Calculator _calc;
        private int _amount;

        public AddCommand(Calculator calc, int amount)
        {
            _calc = calc;
            _amount = amount;
        }

        public void Execute() => _calc.Add(_amount);
        public void Undo() => _calc.Subtract(_amount);
    }

    // ===== Invoker =====
    public class CommandInvoker
    {
        private Stack<ICommand> _history = new();

        public void Execute(ICommand cmd)
        {
            cmd.Execute();
            _history.Push(cmd);
        }

        public void Undo()
        {
            if (_history.Count > 0)
                _history.Pop().Undo();
        }
    }

    // ===== Uso =====
    var calc = new Calculator();
    var invoker = new CommandInvoker();

    invoker.Execute(new AddCommand(calc, 10)); // 10
    invoker.Execute(new AddCommand(calc, 5));  // 15
    invoker.Undo();                             // 10
    Console.WriteLine(calc.GetValue());";

    private string advancedCode = @"
    // ===== Document =====
    public class TextDocument
    {
        private string _content = string.Empty;

        public void Insert(int pos, string text)
            => _content = _content.Insert(pos, text);

        public void Delete(int pos, int length)
            => _content = _content.Remove(pos, length);

        public string GetContent() => _content;
    }

    // ===== Commands =====
    public class InsertCommand : IEditorCommand
    {
        private TextDocument _doc;
        private int _pos;
        private string _text;

        public InsertCommand(TextDocument doc, int pos, string text)
        {
            _doc = doc;
            _pos = pos;
            _text = text;
        }

        public void Execute() => _doc.Insert(_pos, _text);
        public void Undo() => _doc.Delete(_pos, _text.Length);
    }

    public class DeleteCommand : IEditorCommand
    {
        private TextDocument _doc;
        private int _pos;
        private int _length;
        private string _deleted;

        public DeleteCommand(TextDocument doc, int pos, int len)
        {
            _doc = doc;
            _pos = pos;
            _length = len;
        }

        public void Execute()
        {
            _deleted = _doc.GetContent().Substring(_pos, _length);
            _doc.Delete(_pos, _length);
        }

        public void Undo() => _doc.Insert(_pos, _deleted);
    }";

    private string usageCode = @"
    // ===== PATRÓN 1: Cola de comandos =====
    var queue = new Queue<ICommand>();
    queue.Enqueue(new AddCommand(calc, 10));
    queue.Enqueue(new AddCommand(calc, 5));

    while (queue.Count > 0)
        queue.Dequeue().Execute();

    // ===== PATRÓN 2: Macros =====
    public class MacroCommand : ICommand
    {
        private List<ICommand> _commands = new();

        public void AddCommand(ICommand cmd) => _commands.Add(cmd);

        public void Execute()
        {
            foreach (var cmd in _commands)
                cmd.Execute();
        }

        public void Undo()
        {
            for (int i = _commands.Count - 1; i >= 0; i--)
                _commands[i].Undo();
        }
    }

    // ===== PATRÓN 3: Historial =====
    public class CommandHistory
    {
        private List<ICommand> _executed = new();

        public void Execute(ICommand cmd)
        {
            cmd.Execute();
            _executed.Add(cmd);
        }

        public void ShowHistory()
        {
            foreach (var cmd in _executed)
                Console.WriteLine($""Ejecutado: {cmd.GetType().Name}"");
        }
    }";
}