    // ===== Product Iterator =====
    public class ProductCatalog
    {
        private List<Product> _products = new();

        public IProductIterator CreateIterator() 
            => new ProductIterator(this);

        public IProductIterator CreateIteratorByPrice(
            decimal min, decimal max) 
