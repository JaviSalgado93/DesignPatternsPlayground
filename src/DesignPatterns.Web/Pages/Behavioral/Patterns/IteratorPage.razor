    private string basicCode = @"
    // ===== Iterator Interface =====
    public interface IBookIterator
    {
        bool HasNext();
        Book Next();
        void Reset();
    }

    // ===== Aggregate =====
    public class BookCollection
    {
        private List<Book> _books = new();

        public void AddBook(Book book) => _books.Add(book);

        public IBookIterator CreateIterator() 
            => new BookIterator(this);

        public int GetCount() => _books.Count;
        public Book GetBook(int index) => _books[index];

        // ===== Concrete Iterator =====
        private class BookIterator : IBookIterator
        {
            private BookCollection _collection;
            private int _index = 0;

            public BookIterator(BookCollection col) 
                => _collection = col;

            public bool HasNext() 
                => _index < _collection.GetCount();

            public Book Next()
            {
                if (!HasNext())
                    throw new InvalidOperationException();
                return _collection.GetBook(_index++);
            }

            public void Reset() => _index = 0;
        }
    }

    // ===== Uso =====
    var library = new BookCollection();
    library.AddBook(new Book(""1984"", ""Orwell""));
    library.AddBook(new Book(""Brave New World"", ""Huxley""));

    var iterator = library.CreateIterator();
    while (iterator.HasNext())
    {
        Console.WriteLine(iterator.Next());
    }";

