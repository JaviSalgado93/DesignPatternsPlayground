    private string comparisonCode = @"
    // ===== SIN ITERATOR (Problema) =====
    public class BadLibrary
    {
        public List<Book> Books { get; set; } // ❌ Expone
    }

    var lib = new BadLibrary();
    lib.Books.Add(new Book(""1984"", ""Orwell"", 1949));

    // Cliente manipula directamente
    foreach (var book in lib.Books) // ❌ Acoplamiento
        Console.WriteLine(book);

    // No hay abstracción, cambio de estructura afecta clientes

    // ===== CON ITERATOR (Solución) =====
    public class GoodLibrary
    {
        private List<Book> _books = new(); // ✅ Privado

        public void AddBook(Book book) => _books.Add(book);

        public IBookIterator CreateIterator() 
            => new BookIterator(this);

        public IBookIterator CreateReverseIterator() 
            => new ReverseBookIterator(this);
    
        // Estructura interna protegida
    }

    var lib = new GoodLibrary();
    lib.AddBook(new Book(""1984"", ""Orwell"", 1949));

    // Cliente usa iteradores abstraídos
    var iter = lib.CreateIterator();
    while (iter.HasNext())
        Console.WriteLine(iter.Next()); // ✅ Desacoplado

    // Cambio interno no afecta clientes";
