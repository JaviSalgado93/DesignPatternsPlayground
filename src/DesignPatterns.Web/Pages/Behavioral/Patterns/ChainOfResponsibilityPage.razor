    private string basicCode = @"
    // ===== Handler base =====
    public abstract class Logger
    {
        protected Logger _next;

        public virtual void SetNext(Logger next) => _next = next;

        public virtual void Log(string level, string message)
        {
            if (Handle(level))
                Process(level, message);
            else if (_next != null)
                _next.Log(level, message);
        }

        protected abstract bool Handle(string level);
        protected abstract void Process(string level, string message);
    }

    // ===== Handlers concretos =====
    public class ConsoleLogger : Logger
    {
        protected override bool Handle(string level) 
            => level == ""Info"" || level == ""Debug"";

        protected override void Process(string level, string msg)
            => Console.WriteLine($""[Console] {level}: {msg}"");
    }

    public class FileLogger : Logger
    {
        protected override bool Handle(string level) 
            => level == ""Warning"" || level == ""Error"";

        protected override void Process(string level, string msg)
            => Console.WriteLine($""[File] {level}: {msg}"");
    }

    // ===== Uso =====
    Logger console = new ConsoleLogger();
    Logger file = new FileLogger();
    console.SetNext(file);

    console.Log(""Debug"", ""Debugging info"");
    console.Log(""Error"", ""Something went wrong"");";

    private string advancedCode = @"
    // ===== Approver base =====
    public abstract class Approver
    {
        protected string _name;
        protected decimal _limit;
        protected Approver _next;

        public Approver(string name, decimal limit)
        {
            _name = name;
            _limit = limit;
        }

        public void SetNext(Approver next) => _next = next;

        public void Approve(decimal amount, string request)
        {
            if (amount <= _limit)
                Console.WriteLine($""[{_name}] ✅ Aprobado: ${amount}"");
            else if (_next != null)
            {
                Console.WriteLine($""[{_name}] Escalando (${amount} > ${_limit})"");
                _next.Approve(amount, request);
            }
            else
                Console.WriteLine($""❌ Rechazado: ${amount}"");
        }
    }

    // ===== Approvers =====
    public class Manager : Approver
    {
        public Manager() : base(""Manager"", 1000) { }
    }

    public class Director : Approver
    {
        public Director() : base(""Director"", 5000) { }
    }

    public class CEO : Approver
    {
        public CEO() : base(""CEO"", decimal.MaxValue) { }
    }

    // ===== Uso =====
    Approver mgr = new Manager();
    Approver dir = new Director();
    Approver ceo = new CEO();

    mgr.SetNext(dir);
    dir.SetNext(ceo);

    mgr.Approve(500, ""Supplies"");  // Manager aprueba
    mgr.Approve(3000, ""Travel"");   // Director aprueba
    mgr.Approve(10000, ""Expansion""); // CEO aprueba";

    private string flowCode = @"
    // ===== FLUJO DE CADENA =====

    // Solicitud: $2500 para conferencia
    // Manager aprueba hasta $1000

    Solicitud ($2500)
        ↓
    [Manager] ¿Puedo manejar? ($2500 <= $1000)
        ❌ No
        ↓
    Pasar al siguiente → [Director]
        ↓
    [Director] ¿Puedo manejar? ($2500 <= $5000)
        ✅ Sí!
        ↓
    Procesar: ✅ APROBADO

    // Solicitud: $10000 para expansión
    Solicitud ($10000)
        ↓
    [Manager] ¿Puedo manejar? ($10000 <= $1000)
        ❌ No → Pasar a [Director]
        ↓
    [Director] ¿Puedo manejar? ($10000 <= $5000)
        ❌ No → Pasar a [CEO]
        ↓
    [CEO] ¿Puedo manejar? ($10000 <= ∞)
        ✅ Sí!
        ↓
    Procesar: ✅ APROBADO";
}