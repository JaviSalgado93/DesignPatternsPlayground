    private string basicCode = @"
    // ===== Abstract Expression =====
    public interface IMathExpression
    {
        double Evaluate();
        string GetExpression();
    }

    // ===== Terminal Expressions =====
    public class NumberExpr : IMathExpression
    {
        private double _value;

        public NumberExpr(double value) => _value = value;

        public double Evaluate() => _value;
        public string GetExpression() => _value.ToString();
    }

    // ===== Non-Terminal Expressions =====
    public class AddExpr : IMathExpression
    {
        private IMathExpression _left;
        private IMathExpression _right;

        public AddExpr(IMathExpression left, IMathExpression right)
        {
            _left = left;
            _right = right;
        }

        public double Evaluate() 
            => _left.Evaluate() + _right.Evaluate();

        public string GetExpression() 
            => $""({_left.GetExpression()} + {_right.GetExpression()})"";
    }

    // ===== Uso =====
    // 5 + 3
    var expr = new AddExpr(
        new NumberExpr(5), 
        new NumberExpr(3)
    );

    Console.WriteLine($""Expresión: {expr.GetExpression()}"");
    Console.WriteLine($""Resultado: {expr.Evaluate()}"")";

    private string advancedCode = @"
    // ===== Command Interpreter =====
    public class CommandInterpreter
    {
        private CommandContext _context;

        public CommandInterpreter() => _context = new CommandContext();

        public void Execute(string commandLine)
        {
            string[] parts = commandLine.Split(' ');
            string command = parts[0].ToUpper();

            ICommand cmd = command switch
            {
                ""SET"" => new SetCommand(
                    _context, parts[1], 
                    string.Join("" "", parts.Skip(2))),
            
                ""PRINT"" => new PrintCommand(
                    _context, parts[1]),
            
                ""ECHO"" => new EchoCommand(
                    _context, 
                    string.Join("" "", parts.Skip(1))),
            
                _ => throw new InvalidOperationException(
                    $""Comando desconocido: {command}"")
            };

            cmd.Execute();
        }
    }

    // ===== Uso =====
    var interpreter = new CommandInterpreter();

    interpreter.Execute(""SET nombre Juan"");
    interpreter.Execute(""PRINT nombre"");
    interpreter.Execute(""ECHO Bienvenido"");";

    private string grammarCode = @"
    Expresión Matemática BNF:
    ═════════════════════════════

    <expresión>     ::= <suma>
    <suma>          ::= <multiplicación> 
                      | <suma> '+' <multiplicación>
                      | <suma> '-' <multiplicación>
    <multiplicación>::= <potencia>
                      | <multiplicación> '*' <potencia>
                      | <multiplicación> '/' <potencia>
    <potencia>      ::= <primario>
                      | <primario> '^' <potencia>
    <primario>      ::= <número>
                      | <variable>
                      | '(' <expresión> ')'
    <número>        ::= [0-9]+
    <variable>      ::= [a-z]+

    Ejemplo: (5 + 3) * 2 ^ 3
    ═════════════════════════════

    Árbol sintáctico:
            *
           / \
          +   ^
         / \ / \
        5  3 2  3

    Evaluación:
      5 + 3 = 8
      2 ^ 3 = 8
      8 * 8 = 64";
}