    private string basicCode = @"
    // ===== Observer Interface =====
    public interface IStockObserver
    {
        void Update(Stock stock);
    }

    // ===== Subject =====
    public class Stock
    {
        private decimal _price;
        private List<IStockObserver> _observers = new();

        public decimal Price => _price;

        public void Subscribe(IStockObserver obs)
        {
            _observers.Add(obs);
            Console.WriteLine(""Suscrito"");
        }

        public void Unsubscribe(IStockObserver obs)
        {
            _observers.Remove(obs);
            Console.WriteLine(""Desuscrito"");
        }

        public void SetPrice(decimal newPrice)
        {
            if (newPrice != _price)
            {
                _price = newPrice;
                NotifyObservers();
            }
        }

        private void NotifyObservers()
        {
            foreach (var obs in _observers)
                obs.Update(this);
        }
    }

    // ===== Concrete Observer =====
    public class Investor : IStockObserver
    {
        private string _name;

        public Investor(string name) => _name = name;

        public void Update(Stock stock)
            => Console.WriteLine(
                $""[{_name}] Precio: ${stock.Price}"");
    }

    // ===== Uso =====
    var apple = new Stock();
    var investor = new Investor(""Alice"");

    apple.Subscribe(investor);
    apple.SetPrice(150.00m); // Notifica investor";

    private string advancedCode = @"
    // ===== Weather Subject =====
    public class WeatherData
    {
        private float _temperature;
        private float _humidity;
        private List<IWeatherObserver> _observers = new();

        public float Temperature => _temperature;
        public float Humidity => _humidity;

        public void RegisterObserver(IWeatherObserver obs)
        {
            _observers.Add(obs);
        }

        public void SetMeasurements(
            float temp, float humidity)
        {
            _temperature = temp;
            _humidity = humidity;
            NotifyObservers();
        }

        private void NotifyObservers()
        {
            foreach (var obs in _observers)
                obs.Update(this);
        }
    }

    // ===== Multiple Observers =====
    public class CurrentDisplay : IWeatherObserver
    {
        public void Update(WeatherData w)
            => Console.WriteLine(
                $""Temp: {w.Temperature}°C"");
    }

    public class StatisticsDisplay : IWeatherObserver
    {
        private float _max = float.MinValue;
        private float _min = float.MaxValue;

        public void Update(WeatherData w)
        {
            _max = Math.Max(_max, w.Temperature);
            _min = Math.Min(_min, w.Temperature);
            Console.WriteLine(
                $""Max: {_max}°C, Min: {_min}°C"");
        }
    }

    public class AlarmDisplay : IWeatherObserver
    {
        public void Update(WeatherData w)
        {
            if (w.Temperature > 30)
                Console.WriteLine(
                    ""⚠️ ALERTA: Muy caluroso"");
        }
    }";

