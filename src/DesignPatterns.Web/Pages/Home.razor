@page "/"

<PageTitle>Home - Design Patterns</PageTitle>

<div class="max-w-7xl mx-auto animate-slide-up px-4">
    <!-- Header -->
    <div class="text-center mb-8 md:mb-12">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-3 md:mb-4 pb-2 md:pb-3 bg-gradient-to-r from-primary-600 to-accent-purple bg-clip-text text-transparent">
            Design Patterns Playground
        </h1>
        <p class="text-base md:text-lg lg:text-xl text-secondary-600">Explora los patrones de diseño más importantes en C#</p>
    </div>

    <!-- Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 lg:gap-8 mb-8 md:mb-12">
        <PatternCard IconName="building-library"
                     Title="Creational Patterns (Patrones Creacionales)"
                     Description="Patrones enfocados en la creación de objetos de manera flexible y reutilizable."
                     BorderColor="border-primary-600"
                     LinkUrl="/creational"
                     LinkText="Explorar patrones" />

        <PatternCard IconName="wrench"
                     Title="Structural Patterns (Patrones Estructurales)"
                     Description="Patrones que facilitan el diseño identificando relaciones simples entre entidades."
                     BorderColor="border-accent-green"
                     LinkUrl="/structural"
                     LinkText="Explorar patrones" />

        <PatternCard IconName="bolt"
                     Title="Behavioral Patterns (Patrones de Comportamiento)"
                     Description="Patrones que se enfocan en la comunicación entre objetos y la delegación de responsabilidades."
                     BorderColor="border-accent-purple"
                     LinkUrl="/behavioral"
                     LinkText="Explorar patrones" />
    </div>

    <!-- Stats Section -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6 mt-8 md:mt-12 pb-3">
        <div class="bg-white rounded-xl shadow-md p-4 md:p-6 border-l-4 border-primary-600 hover:shadow-xl transition-shadow">
            <div class="text-3xl md:text-4xl font-bold text-primary-600 mb-2">23</div>
            <div class="text-sm md:text-base text-secondary-600">Patrones de Diseño</div>
        </div>

        <div class="bg-white rounded-xl shadow-md p-4 md:p-6 border-l-4 border-accent-green hover:shadow-xl transition-shadow">
            <div class="text-3xl md:text-4xl font-bold text-accent-green mb-2">50+</div>
            <div class="text-sm md:text-base text-secondary-600">Ejemplos de Código</div>
        </div>

        <div class="bg-white rounded-xl shadow-md p-4 md:p-6 border-l-4 border-accent-purple hover:shadow-xl transition-shadow">
            <div class="text-4xl font-bold text-accent-purple mb-2">100%</div>
            <div class="text-secondary-600">Gratis y Open Source</div>
        </div>
    </div>
</div>