@code {
    private List<BreadcrumbItem> breadcrumbItems = new()
    {
        new BreadcrumbItem("Home", "/"),
        new BreadcrumbItem("Creational", "/creational"),
        new BreadcrumbItem("Abstract Factory", "/creational/abstract-factory")
    };

    private int activeTab = 0;
    private List<string> tabTitles = new() { "Básico", "Avanzado", "Uso" };

    private List<string> useCases = new()
    {
        "Sistemas multiplataforma (Windows, macOS, Linux)",
        "Temas de aplicación (Light, Dark, etc)",
        "Familias de componentes UI",
        "Sistemas de reportes con estilos",
        "Motores de bases de datos plug-and-play",
        "Compatibilidad de navegadores",
        "Documentos con estilos coherentes",
        "Configuraciones de dispositivos"
    };

    private List<string> tags = new() { "Familias", "Coherencia", "Multiplataforma", "Desacoplamiento Completo" };

    private string basicCode = @"
    // ===== Interfaces de Productos =====
    public interface IUIButton
    {
        void Render();
    }

    public interface IUICheckbox
    {
        void Render();
    }

    // ===== Productos Windows =====
    public class WindowsButton : IUIButton
    {
        public void Render() => Console.WriteLine(""Windows Button"");
    }

    public class WindowsCheckbox : IUICheckbox
    {
        public void Render() => Console.WriteLine(""Windows Checkbox"");
    }

    // ===== Abstract Factory =====
    public interface IUIFactory
    {
        IUIButton CreateButton();
        IUICheckbox CreateCheckbox();
    }

    public class WindowsUIFactory : IUIFactory
    {
        public IUIButton CreateButton() => new WindowsButton();
        public IUICheckbox CreateCheckbox() => new WindowsCheckbox();
    }

    // ===== Uso =====
    IUIFactory factory = new WindowsUIFactory();
    var button = factory.CreateButton();
    var checkbox = factory.CreateCheckbox();
    button.Render();
    checkbox.Render();";

    private string advancedCode = @"
    // ===== Interfaces de Tema =====
    public interface IThemeColor
    {
        string GetBackgroundColor();
        string GetForegroundColor();
    }

    public interface IThemeFont
    {
        string GetFontFamily();
        int GetFontSize();
    }

    public interface ITheme
    {
        IThemeColor CreateColor();
        IThemeFont CreateFont();
    }

    // ===== Light Theme =====
    public class LightColor : IThemeColor
    {
        public string GetBackgroundColor() => ""#FFFFFF"";
        public string GetForegroundColor() => ""#000000"";
    }

    public class LightTheme : ITheme
    {
        public IThemeColor CreateColor() => new LightColor();
        public IThemeFont CreateFont() => new LightFont();
    }

    // ===== Dark Theme =====
    public class DarkColor : IThemeColor
    {
        public string GetBackgroundColor() => ""#1E1E1E"";
        public string GetForegroundColor() => ""#FFFFFF"";
    }

    public class DarkTheme : ITheme
    {
        public IThemeColor CreateColor() => new DarkColor();
        public IThemeFont CreateFont() => new DarkFont();
    }

    // ===== Factory =====
    public class ThemeFactory
    {
        public static ITheme CreateTheme(string name) => name.ToLower() switch
        {
            ""light"" => new LightTheme(),
            ""dark"" => new DarkTheme(),
            _ => throw new ArgumentException()
        };
    }";

    private string usageCode = @"
    // ===== El cliente no conoce los detalles =====
    public class Application
    {
        private ITheme _theme;

        public Application(string themeName)
        {
            // La factory crea la familia completa
            _theme = ThemeFactory.CreateTheme(themeName);
        }

        public void RenderUI()
        {
            var color = _theme.CreateColor();
            var font = _theme.CreateFont();

            Console.WriteLine($""Background: {color.GetBackgroundColor()}"");
            Console.WriteLine($""Foreground: {color.GetForegroundColor()}"");
            Console.WriteLine($""Font: {font.GetFontFamily()}"");
        }
    }

    // ===== Uso =====
    var app1 = new Application(""light"");
    app1.RenderUI(); // Light colors + Light font

    var app2 = new Application(""dark"");
    app2.RenderUI(); // Dark colors + Dark font
    // Toda la familia cambia juntos, consistentemente";
}