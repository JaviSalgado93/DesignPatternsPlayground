@code {
    private List<BreadcrumbItem> breadcrumbItems = new()
    {
        new BreadcrumbItem("Home", "/"),
        new BreadcrumbItem("Creational", "/creational"),
        new BreadcrumbItem("Singleton", "/creational/singleton")
    };

    private int activeTab = 0;
    private List<string> tabTitles = new() { "Básico", "Avanzado", "Uso" };

    private List<string> useCases = new()
    {
        "Logger centralizado de aplicación",
        "Gestor de configuración global",
        "Pool de conexiones a BD",
        "Caché centralizado",
        "Acceso a recursos compartidos",
        "Gestión de sesiones",
        "Gestor de eventos global",
        "Acceso a base de datos"
    };

    private List<string> tags = new() { "Thread-Safe", "Lazy Loading", "Global Access", "Control Centralizado" };

    private string basicCode = @"
    // ===== Implementación Básica =====
    public sealed class SimpleLogger
    {
        private static readonly Lazy<SimpleLogger> _instance =
            new Lazy<SimpleLogger>(() => new SimpleLogger());

        public static SimpleLogger Instance => _instance.Value;

        private List<string> _logs = new();

        private SimpleLogger() { }

        public void Log(string message)
        {
            _logs.Add($""[{DateTime.Now}] {message}"");
        }
    }

    // ===== Uso =====
    SimpleLogger.Instance.Log(""Aplicación iniciada"");
    SimpleLogger.Instance.Log(""Operación completada"");";

    private string advancedCode = @"
    // ===== Lazy<T> Thread-Safe =====
    public sealed class LazyInitialization
    {
        private static readonly Lazy<LazyInitialization> _instance =
            new Lazy<LazyInitialization>(
                valueFactory: () => new LazyInitialization(),
                isThreadSafe: true
            );

        public static LazyInitialization Instance => _instance.Value;

        private LazyInitialization()
        {
            System.Threading.Thread.Sleep(1000);
            Console.WriteLine(""Instancia creada"");
        }

        public bool IsValueCreated => _instance. IsValueCreated;
    }

    // ===== Verificar si se ha creado =====
    Console.WriteLine(LazyInitialization.Instance.IsValueCreated); // true
    var instance = LazyInitialization. Instance;";

    private string usageCode = @"
    // ===== Cómo Usar Singleton =====
    // Obtener la instancia (se crea si no existe)
    var logger1 = SimpleLogger.Instance;
    logger1.Log(""Primer acceso"");

    // Obtener otra referencia (es la MISMA instancia)
    var logger2 = SimpleLogger.Instance;
    logger2.Log(""Segundo acceso"");

    // Verificar que son la misma instancia
    bool sonIguales = ReferenceEquals(logger1, logger2);
    Console.WriteLine($""¿Misma instancia? {sonIguales}""); // true

    // IMPORTANTE: Singleton es global
    // Cambios en logger1 afectan a logger2
    logger1.Log(""Mensaje 1"");
    logger2.Log(""Mensaje 2"");
    // Ambos logs están en la misma lista";
}